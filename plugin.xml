<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>

   <extension
         point="org.jactr.instruments">
      <instrument
            class="de.monochromata.jactr.instruments.activation.ActivationGraph"
            hidden="false"
            name="Activation Graph">
         <description>
            Periodically exports information about the existance and activation of chunks that can be used to plot chunk graphs and the time course of chunk activations.
         </description>
         <parameter
               name="pathToConfigXML"
               value="activationGraphConfig.xml">
         </parameter>
      </instrument>
      <instrument
            class="de.monochromata.jactr.instruments.fixations.FixationDurations"
            hidden="false"
            name="Fixation Durations">
         <description>
            Exports the fixation durations generated by REMMA along with the information on the experimentally obtained fixations input into the model.
         </description>
         <parameter
               name="generatedFixationsLogFileName"
               value="generatedFixations.log">
         </parameter>
         <parameter
               name="logSeparator"
               value=";">
         </parameter>
      </instrument>
      <instrument
            class="de.monochromata.jactr.instruments.regressions.RegressionPathDurations"
            hidden="false"
            name="Regression Path Durations">
         <description>
            Exports regression path durations aggregated from the fixation durations generated by REMMA along with the information on the experimentally obtained regression path durations input into the model.
         </description>
         <parameter
               name="generatedRegressionPathsLogFileName"
               value="generatedRegressionPaths.log">
         </parameter>
         <parameter
               name="aggregatedRegressionPathsLogFileName"
               value="aggregatedRegressionPaths.log">
         </parameter>
         <parameter
               name="logSeparator"
               value=";">
         </parameter>
         <parameter
               name="logIndirectAnaphorsOnly"
               value="true">
         </parameter>
      </instrument>
      <instrument
            class="de.monochromata.jactr.instruments.activation.ActivationBeforeRegression"
            hidden="false"
            name="Activation Before Regression">
         <description>
            Exports the activation of underspecified relations immediately before the first regression on target expressions (an anaphor or an equivalent Java expression) to a log file.
         </description>
         <parameter
               name="activationBeforeRegressionLogFileName"
               value="activationBeforeRegression.log">
         </parameter>
         <parameter
               name="logSeparator"
               value=";">
         </parameter>
         <parameter
               name="logIndirectAnaphorsOnly"
               value="true">
         </parameter>
      </instrument>
      <instrument
            class="de.monochromata.jactr.instruments.activation.FinalActivation"
            hidden="false"
            name="Final Activation">
         <description>
            Exports the activation of a configured set of chunk at model termination to a file.
         </description>
         <parameter
               name="pathToConfigXML"
               value="finalActivationConfig.xml">
         </parameter>
      </instrument>
      <instrument
            class="de.monochromata.jactr.instruments.ErrorLog"
            hidden="false"
            name="TWM and REMMA Error Log">
         <description>
            Logs errors occuring in the TWM and REMMA modules
         </description>
         <parameter
               name="errorLogFileName"
               value="errors.log">
         </parameter>
      </instrument>
   </extension>

</plugin>
